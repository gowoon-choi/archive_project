<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_screenshot"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ss_small_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        </ImageView>

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/icon_mini"
            android:layout_height="@dimen/icon_mini"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/spacing_10"
            android:layout_marginRight="@dimen/spacing_10"
            android:background="@drawable/bg_checkbox"
            android:visibility="gone">

        </ImageView>

        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="@dimen/icon_super_micro"
            android:layout_height="@dimen/icon_super_micro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/spacing_8"
            android:layout_marginLeft="@dimen/spacing_8"
            android:src="@drawable/ic_heart_small"
            android:visibility="gone">

        </ImageView>

        <ImageView
            android:id="@+id/iv_label"
            android:layout_width="@dimen/icon_super_micro"
            android:layout_height="@dimen/icon_super_micro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_heart"
            android:layout_marginBottom="@dimen/spacing_8"
            android:layout_marginLeft="@dimen/spacing_8"
            android:src="@drawable/ic_label_small"
            android:visibility="gone">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>