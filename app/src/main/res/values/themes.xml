<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CaptureBox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/depth3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/depth4</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Transparent" parent="@style/Theme.AppCompat">
        <!--Titlebar 없애는 옵션
            true : Titlebar x
            false : Titlebar o
        -->
        <item name="windowNoTitle">true</item>
        <!-- 투명정도를 나타내는 색-->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!--
        android:backgroundDimEnabled
        true - 반투명 검정 /  false - 완전 투명
        -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/depth4</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="BottomSheetDefaultStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorHighlight">@color/key</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/depth3</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogMessage</item>
    </style>

    <style name="AlertDialogPositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/positive</item>
        <item name="android:textSize">@dimen/b2</item>
    </style>

    <style name="AlertDialogNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/negative</item>
        <item name="android:textSize">@dimen/b2</item>
    </style>

    <style name="AlertDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/b1</item>
        <item name="android:textColor">@color/def_secondary</item>
    </style>

    <style name="AlertDialogMessage" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">@dimen/b2</item>
        <item name="android:textColor">@color/def_inactive</item>
    </style>

    <style name="RoundedActivity" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/rounded_bottom_sheet</item>
    </style>
</resources>